<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:CheckSumSHA256Inspector">

  <Color x:Key="LightPink">#FFFFB6C1</Color>
  <SolidColorBrush x:Key="LightPinkBrush" Color="{StaticResource LightPink}"/>
  <Color x:Key="LightGreen">#FF90EE90</Color>
  <SolidColorBrush x:Key="LightGreenBrush" Color="{StaticResource LightGreen}"/>

  <Style x:Key="GreenBorder" TargetType="{x:Type Border}">
      <Setter Property="BorderThickness" Value="1" />
      <Setter Property="BorderBrush" Value="LightGreen" />
  </Style>
  <Style x:Key="RedBorder" TargetType="{x:Type Border}">
      <Setter Property="BorderThickness" Value="1" />
      <Setter Property="BorderBrush" Value="LightPink" />
  </Style>
</ResourceDictionary>