<Application x:Class="CheckSumSHA256Inspector.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:CheckSumSHA256Inspector"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        

        <Style x:Key="GreenBorder" TargetType="{x:Type Border}">
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="BorderBrush" Value="LightGreen" />
        </Style>
        <Style x:Key="RedBorder" TargetType="{x:Type Border}">
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="BorderBrush" Value="LightPink" />
        </Style>

    </Application.Resources>
</Application>
